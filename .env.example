# ===========================================
# DealGuard Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- Database -----
DATABASE_URL=postgresql+asyncpg://dealguard:dealguard@localhost:5432/dealguard
DATABASE_SYNC_URL=postgresql://dealguard:dealguard@localhost:5432/dealguard

# ----- Redis (Queue & Cache) -----
REDIS_URL=redis://localhost:6379

# ----- Supabase Auth -----
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ----- AI Provider -----
# Choose provider: "anthropic" or "deepseek"
AI_PROVIDER=deepseek

# ----- Anthropic AI (production) -----
ANTHROPIC_API_KEY=sk-ant-...

# ----- DeepSeek AI (cheap testing - ~20x cheaper!) -----
DEEPSEEK_API_KEY=sk-...
DEEPSEEK_MODEL=deepseek-chat

# ----- S3 Storage (MinIO for local) -----
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=dealguard-documents
S3_REGION=eu-central-1

# ----- Application -----
APP_ENV=development
APP_DEBUG=true
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
APP_SECRET_KEY=GENERATE_A_SECURE_KEY_HERE
CORS_ORIGINS=http://localhost:3000

# ----- Auth Provider -----
# Use "dev" for local development (no Supabase required), "supabase" for production
AUTH_PROVIDER=dev

# ----- Frontend (Next.js) -----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
